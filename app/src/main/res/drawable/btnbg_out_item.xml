<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Even though these two point to the same resource, have two states so the drawable will invalidate itself when coming out of pressed state. -->
    <item android:drawable="@drawable/item_bg_2" android:state_focused="true" android:state_pressed="true"/>
    <item android:drawable="@drawable/item_bg_2" android:state_focused="false" android:state_pressed="true"/>
    <item android:drawable="@drawable/item_bg_1" android:state_focused="true"/>
    <item android:drawable="@drawable/item_bg_1"/>

</selector>